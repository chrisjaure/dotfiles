#!/bin/bash
function doIt() {
	local install_path=~/dotfiles
	local repo_path="git@github.com:chrisjaure/dotfiles.git"

	# Initialize.
	if [[ ! -d $install_path ]]; then
		# ~/dotfiles doesn't exist? Clone it!
		echo "Cloning $repo_path into $install_path..."
		git clone $repo_path $install_path
		cd $install_path
	else
		# Make sure we have the latest files.
		echo "Updating $install_path..."
		cd $install_path
		git pull
	fi
	rsync --exclude ".git/" --exclude "bootstrap.sh" --exclude "README.md" -av $install_path ~
}

if [ "$1" == "--force" -o "$1" == "-f" ]; then
	doIt
else
	read -p "This may overwrite existing files in your home directory. Are you sure? (y/n) " -n 1
	echo
	if [[ $REPLY =~ ^[Yy]$ ]]; then
		doIt
	fi
fi

unset doIt
. ~/.bashrc