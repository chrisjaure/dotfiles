#!/bin/bash
function doIt() {
	local local_path=~/dotfiles
	local remote_path="git://github.com/chrisjaure/dotfiles.git"

	# Initialize.
	if [[ ! -d $local_path ]]; then
		# ~/dotfiles doesn't exist? Clone it!
		echo "Cloning $remote_path into $local_path..."
		git clone --recursive $remote_path $local_path
		cd $local_path
	else
		# Make sure we have the latest files.
		echo "Updating $local_path..."
		cd $local_path
		git pull
		git submodule update --init --recursive --quiet
	fi
	rsync --include ".gitconfig" --exclude "README.md" --exclude ".git*" --exclude ".npm*" -arv . ~
}

# If Git is not installed...
if [[ ! "$(type -P git)" ]]; then
	if [[ "$(cat /etc/issue 2> /dev/null)" =~ Ubuntu ]]; then
		echo "Installing Git..."
		sudo apt-get -qq install git-core
	fi
fi

if [ "$1" == "--force" -o "$1" == "-f" ]; then
	doIt
else
	read -p "This may overwrite existing files in your home directory. Are you sure? (y/n) " -n 1
	echo
	if [[ $REPLY =~ ^[Yy]$ ]]; then
		doIt
	fi
fi

unset doIt
. ~/.bashrc
